                  <div className="mt-8">
                    <h4 className="text-md font-medium text-gray-900 mb-4">Materiales Existentes</h4>
                    <div className="space-y-4">
                      {materials.map(material => (
                        <div key={material.id} className="border border-gray-200 rounded-lg p-4">
                          <div className="flex justify-between items-start">
                            <div className="flex items-center">
                              <span className="text-2xl mr-3">{getFileIcon(material.type)}</span>
                              <div>
                                <h5 className="text-md font-medium text-gray-900">{material.name}</h5>
                                <p className="text-sm text-gray-500">Categor√≠a: {material.category}</p>
                                <p className="text-sm text-gray-500">Subido por: {material.uploadedBy} - {material.date}</p>
                              </div>
                            </div>
                            <div className="flex space-x-2">
                              <button
                                onClick={() => {
                                  // Editar material (simulado)
                                  alert(`Editar material: ${material.name}`);
                                }}
                                className="px-3 py-1 text-sm bg-yellow-600 text-white rounded hover:bg-yellow-700"
                              >
                                Editar
                              </button>
                              <button
                                onClick={() => deleteMaterial(material.id)}
                                className="px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-red-700"
                              >
                                Eliminar
                              </button>
                            </div>
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              )}
              
              {adminTab === 'users' && (
                <div>
                  <h3 className="text-lg font-medium text-gray-900 mb-4">Gesti√≥n de Usuarios</h3>
                  <div className="space-y-4">
                    {users.map(user => (
                      <div key={user.id} className="border border-gray-200 rounded-lg p-4">
                        <div className="flex justify-between items-center">
                          <div>
                            <h5 className="text-md font-medium text-gray-900">{user.name}</h5>
                            <p className="text-sm text-gray-500">{user.email}</p>
                          </div>
                          <div className="flex items-center space-x-3">
                            <span className={`px-2 py-1 text-xs rounded-full ${
                              user.role === 'admin' 
                                ? 'bg-red-100 text-red-800' 
                                : 'bg-blue-100 text-blue-800'
                            }`}>
                              {user.role === 'admin' ? 'Administrador' : 'Docente'}
                            </span>
                            {user.id !== 1 && (
                              <button
                                onClick={() => {
                                  if (window.confirm(`¬øEst√° seguro de eliminar al usuario ${user.name}?`)) {
                                    setUsers(users.filter(u => u.id !== user.id));
                                    alert('Usuario eliminado exitosamente');
                                  }
                                }}
                                className="px-3 py-1 text-sm bg-red-600 text-white rounded hover:bg-red-700"
                              >
                                Eliminar
                              </button>
                            )}
                          </div>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              )}
              
              {adminTab === 'stats' && (
                <div>
                  <h3 className="text-lg font-medium text-gray-900 mb-4">Estad√≠sticas del Sistema</h3>
                  <div className="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
                    <div className="bg-blue-50 p-4 rounded-lg border border-blue-200">
                      <h4 className="text-sm font-medium text-blue-800">Total de Usuarios</h4>
                      <p className="text-2xl font-bold text-blue-900 mt-1">{users.length}</p>
                    </div>
                    <div className="bg-green-50 p-4 rounded-lg border border-green-200">
                      <h4 className="text-sm font-medium text-green-800">Docentes Activos</h4>
                      <p className="text-2xl font-bold text-green-900 mt-1">{users.filter(u => u.role === 'teacher').length}</p>
                    </div>
                    <div className="bg-purple-50 p-4 rounded-lg border border-purple-200">
                      <h4 className="text-sm font-medium text-purple-800">Cursos Disponibles</h4>
                      <p className="text-2xl font-bold text-purple-900 mt-1">{courses.length}</p>
                    </div>
                    <div className="bg-orange-50 p-4 rounded-lg border border-orange-200">
                      <h4 className="text-sm font-medium text-orange-800">Materiales Subidos</h4>
                      <p className="text-2xl font-bold text-orange-900 mt-1">{materials.length}</p>
                    </div>
                  </div>
                  
                  <div className="mt-8">
                    <h4 className="text-md font-medium text-gray-900 mb-4">Progreso de Cursos</h4>
                    <div className="space-y-4">
                      {courses.map(course => (
                        <div key={course.id} className="border border-gray-200 rounded-lg p-4">
                          <div className="flex justify-between items-center mb-2">
                            <h5 className="text-md font-medium text-gray-900">{course.title}</h5>
                            <span className="text-sm text-gray-500">{course.progress}% completado en promedio</span>
                          </div>
                          <div className="w-full bg-gray-200 rounded-full h-2.5">
                            <div 
                              className="bg-blue-600 h-2.5 rounded-full" 
                              style={{ width: `${course.progress}%` }}
                            ></div>
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    );
  };

  return (
    <div className="min-h-screen flex flex-col">
      {currentPage !== 'auth' && <Navbar />}
      <main className="flex-grow">
        {currentPage === 'auth' && <AuthForm />}
        {currentPage === 'home' && <HomePage />}
        {currentPage === 'dashboard' && currentUser && <Dashboard />}
        {currentPage === 'virtualClassroom' && currentUser && <VirtualClassroom />}
        {currentPage === 'materials' && currentUser && <MaterialsPage />}
        {currentPage === 'forum' && <ForumPage />}
        {currentPage === 'account' && currentUser && <AccountPage />}
        {currentUser && currentUser.role === 'admin' && <AdminPanel />}
        {!currentUser && currentPage !== 'auth' && currentPage !== 'home' && (
          <div className="flex items-center justify-center min-h-screen">
            <div className="text-center">
              <h2 className="text-2xl font-bold text-gray-900 mb-4">Debe iniciar sesi√≥n</h2>
              <button
                onClick={() => {
                  setAuthMode('login');
                  setCurrentPage('auth');
                }}
                className="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700"
              >
                Iniciar Sesi√≥n
              </button>
            </div>
          </div>
        )}
      </main>
      <footer className="bg-gray-800 text-white py-6">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="text-center">
            <p className="text-sm">
              ¬© 2024 Sistema de Capacitaci√≥n SIU Guaran√≠. Todos los derechos reservados.
            </p>
          </div>
        </div>
      </footer>
    </div>
  );
};

export default App;
```
