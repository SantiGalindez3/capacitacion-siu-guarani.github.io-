```jsx
import React, { useState, useEffect } from 'react';

const App = () => {
  const [currentUser, setCurrentUser] = useState(null);
  const [users, setUsers] = useState([
    { id: 1, name: 'Admin User', email: 'admin@instituto.edu', password: 'admin123', role: 'admin', code: '0824' },
    { id: 2, name: 'Docente Ejemplo', email: 'docente@instituto.edu', password: 'docente123', role: 'teacher' }
  ]);
  const [courses, setCourses] = useState([
    {
      id: 1,
      title: 'Introducci√≥n a SIU Guaran√≠',
      description: 'Curso b√°sico para el manejo del sistema SIU Guaran√≠',
      modules: [
        {
          id: 1,
          title: 'M√≥dulo 1: Acceso y Navegaci√≥n',
          completed: false,
          materials: [
            { id: 1, name: 'Gu√≠a de acceso.pdf', type: 'pdf', url: '#' },
            { id: 2, name: 'Presentaci√≥n introductoria.pptx', type: 'pptx', url: '#' },
            { id: 3, name: 'Captura de pantalla.png', type: 'image', url: 'https://placehold.co/600x400' }
          ]
        },
        {
          id: 2,
          title: 'M√≥dulo 2: Gesti√≥n de Alumnos',
          completed: false,
          materials: [
            { id: 4, name: 'Manual de gesti√≥n.pdf', type: 'pdf', url: '#' },
            { id: 5, name: 'Video tutorial.mp4', type: 'video', url: '#' }
          ]
        }
      ],
      progress: 0
    },
    {
      id: 2,
      title: 'Avanzado: Reportes y Estad√≠sticas',
      description: 'Curso avanzado para generaci√≥n de reportes en SIU Guaran√≠',
      modules: [
        {
          id: 3,
          title: 'M√≥dulo 1: Tipos de Reportes',
          completed: false,
          materials: [
            { id: 6, name: 'Tipos de reportes.pdf', type: 'pdf', url: '#' },
            { id: 7, name: 'Ejemplos.xlsx', type: 'excel', url: '#' }
          ]
        }
      ],
      progress: 0
    }
  ]);
  const [materials, setMaterials] = useState([
    { id: 1, name: 'Manual Completo SIU Guaran√≠.pdf', type: 'pdf', category: 'General', uploadedBy: 'Admin', date: '2024-01-15' },
    { id: 2, name: 'Gu√≠a R√°pida de Consultas.docx', type: 'docx', category: 'Consultas', uploadedBy: 'Admin', date: '2024-01-20' },
    { id: 3, name: 'Presentaci√≥n Institucional.pptx', type: 'pptx', category: 'Presentaciones', uploadedBy: 'Admin', date: '2024-01-25' }
  ]);
  const [notifications, setNotifications] = useState([
    { id: 1, message: 'Nuevo material disponible: Manual Completo SIU Guaran√≠', date: '2024-01-15', read: false },
    { id: 2, message: 'Nuevo curso disponible: Avanzado: Reportes y Estad√≠sticas', date: '2024-01-20', read: false }
  ]);
  const [forumPosts, setForumPosts] = useState([
    { 
      id: 1, 
      title: 'Problemas al ingresar al sistema', 
      content: 'Hola, estoy teniendo dificultades para ingresar al sistema con mis credenciales.', 
      author: 'Docente Ejemplo', 
      date: '2024-01-10',
      replies: [
        { id: 1, content: 'Verifique que est√° usando el navegador recomendado (Chrome o Firefox)', author: 'Admin User', date: '2024-01-11' }
      ]
    }
  ]);
  const [currentPage, setCurrentPage] = useState('home');
  const [authMode, setAuthMode] = useState('login');
  const [adminCode, setAdminCode] = useState('');
  const [newPost, setNewPost] = useState({ title: '', content: '' });
  const [newMaterial, setNewMaterial] = useState({ name: '', file: null, type: '', category: 'General' });
  const [newCourse, setNewCourse] = useState({ title: '', description: '', modules: [] });
  const [newModule, setNewModule] = useState({ title: '' });
  const [showAdminPanel, setShowAdminPanel] = useState(false);
  const [adminTab, setAdminTab] = useState('courses');

  const handleLogin = (email, password) => {
    const user = users.find(u => u.email === email && u.password === password);
    if (user) {
      setCurrentUser(user);
      setCurrentPage('dashboard');
      if (user.role === 'admin') {
        setShowAdminPanel(false); // Oculto por defecto para administradores
      }
    } else {
      alert('Credenciales incorrectas');
    }
  };

  const handleRegister = (name, email, password, isAdmin, code) => {
    if (isAdmin && code !== '0824') {
      alert('C√≥digo de administrador inv√°lido');
      return;
    }
    
    const newUser = {
      id: users.length + 1,
      name,
      email,
      password,
      role: isAdmin ? 'admin' : 'teacher',
      code: isAdmin ? code : ''
    };
    
    setUsers([...users, newUser]);
    setCurrentUser(newUser);
    setCurrentPage('dashboard');
    if (newUser.role === 'admin') {
      setShowAdminPanel(false); // Oculto por defecto para nuevos administradores
    }
  };

  const handleLogout = () => {
    setCurrentUser(null);
    setCurrentPage('home');
    setShowAdminPanel(false);
  };

  const markNotificationAsRead = (id) => {
    setNotifications(notifications.map(n => 
      n.id === id ? { ...n, read: true } : n
    ));
  };

  const addForumPost = () => {
    if (newPost.title && newPost.content) {
      const post = {
        id: forumPosts.length + 1,
        title: newPost.title,
        content: newPost.content,
        author: currentUser.name,
        date: new Date().toISOString().split('T')[0],
        replies: []
      };
      setForumPosts([post, ...forumPosts]);
      setNewPost({ title: '', content: '' });
      alert('Publicaci√≥n creada exitosamente');
    } else {
      alert('Por favor complete todos los campos');
    }
  };

  const addReply = (postId, replyContent) => {
    if (replyContent.trim()) {
      const newReply = {
        id: Date.now(),
        content: replyContent,
        author: currentUser.name,
        date: new Date().toISOString().split('T')[0]
      };
      
      setForumPosts(forumPosts.map(post => 
        post.id === postId 
          ? { ...post, replies: [...post.replies, newReply] }
          : post
      ));
      
      document.querySelector(`#reply-${postId}`).value = '';
      alert('Respuesta publicada exitosamente');
    }
  };

  const updateCourseProgress = (courseId, moduleId) => {
    setCourses(courses.map(course => {
      if (course.id === courseId) {
        const updatedModules = course.modules.map(module => 
          module.id === moduleId ? { ...module, completed: true } : module
        );
        
        const completedModules = updatedModules.filter(m => m.completed).length;
        const totalModules = updatedModules.length;
        const progress = totalModules > 0 ? Math.round((completedModules / totalModules) * 100) : 0;
        
        return { ...course, modules: updatedModules, progress };
      }
      return course;
    }));
    
    // Agregar notificaci√≥n de progreso
    setNotifications([
      {
        id: notifications.length + 1,
        message: `¬°Has completado un m√≥dulo! Progreso actualizado.`,
        date: new Date().toISOString().split('T')[0],
        read: false
      },
      ...notifications
    ]);
  };

  const getFileIcon = (type) => {
    switch(type) {
      case 'pdf': return 'üìÑ';
      case 'docx': return 'üìù';
      case 'pptx': return 'üìä';
      case 'image': return 'üñºÔ∏è';
      case 'video': return 'üé¨';
      case 'excel': return 'üìà';
      default: return 'üìé';
    }
  };

  const getFileType = (fileName) => {
    const extension = fileName.split('.').pop().toLowerCase();
    switch(extension) {
      case 'pdf': return 'pdf';
      case 'doc': 
      case 'docx': return 'docx';
      case 'ppt': 
      case 'pptx': return 'pptx';
      case 'jpg': 
      case 'jpeg': 
      case 'png': 
      case 'gif': 
      case 'svg': return 'image';
      case 'mp4': 
      case 'avi': 
      case 'mov': return 'video';
      case 'xls': 
      case 'xlsx': return 'excel';
      default: return 'file';
    }
  };

  // Funciones para el panel de administrador
  const addMaterial = (e) => {
    e.preventDefault();
    if (newMaterial.name) {
      const material = {
        id: materials.length + 1,
        name: newMaterial.name,
        type: newMaterial.type || getFileType(newMaterial.name),
        category: newMaterial.category,
        uploadedBy: currentUser.name,
        date: new Date().toISOString().split('T')[0]
      };
      
      setMaterials([material, ...materials]);
      setNewMaterial({ name: '', file: null, type: '', category: 'General' });
      
      // Notificar a todos los usuarios
      setNotifications([
        {
          id: notifications.length + 1,
          message: `Nuevo material disponible: ${material.name}`,
          date: new Date().toISOString().split('T')[0],
          read: false
        },
        ...notifications
      ]);
      
      alert('Material agregado exitosamente');
    } else {
      alert('Por favor ingrese el nombre del material');
    }
  };

  const addModuleToCourse = () => {
    if (newModule.title) {
      const module = {
        id: Date.now(),
        title: newModule.title,
        completed: false,
        materials: []
      };
      
      setNewCourse({
        ...newCourse,
        modules: [...newCourse.modules, module]
      });
      
      setNewModule({ title: '' });
    }
  };

  const removeModuleFromCourse = (moduleId) => {
    setNewCourse({
      ...newCourse,
      modules: newCourse.modules.filter(m => m.id !== moduleId)
    });
  };

  const addCourse = (e) => {
    e.preventDefault();
    if (newCourse.title && newCourse.description) {
      const course = {
        id: courses.length + 1,
        title: newCourse.title,
        description: newCourse.description,
        modules: newCourse.modules.map((module, index) => ({
          ...module,
          id: index + 1
        })),
        progress: 0
      };
      
      setCourses([...courses, course]);
      setNewCourse({ title: '', description: '', modules: [] });
      
      // Notificar a todos los usuarios
      setNotifications([
        {
          id: notifications.length + 1,
          message: `Nuevo curso disponible: ${course.title}`,
          date: new Date().toISOString().split('T')[0],
          read: false
        },
        ...notifications
      ]);
      
      alert('Curso creado exitosamente');
    } else {
      alert('Por favor complete todos los campos');
    }
  };

  const deleteCourse = (courseId) => {
    if (window.confirm('¬øEst√° seguro de eliminar este curso? Esta acci√≥n no se puede deshacer.')) {
      setCourses(courses.filter(course => course.id !== courseId));
      alert('Curso eliminado exitosamente');
    }
  };

  const deleteMaterial = (materialId) => {
    if (window.confirm('¬øEst√° seguro de eliminar este material?')) {
      setMaterials(materials.filter(material => material.id !== materialId));
      alert('Material eliminado exitosamente');
    }
  };

  const AuthForm = () => (
    <div className="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
      <div className="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
        <div>
          <h2 className="mt-6 text-center text-3xl font-extrabold text-gray-900">
            {authMode === 'login' ? 'Iniciar Sesi√≥n' : 'Crear Cuenta'}
          </h2>
          <p className="mt-2 text-center text-sm text-gray-600">
            {authMode === 'login' ? '¬øNo tienes cuenta?' : '¬øYa tienes cuenta?'}{' '}
            <button 
              onClick={() => setAuthMode(authMode === 'login' ? 'register' : 'login')}
              className="font-medium text-blue-600 hover:text-blue-500"
            >
              {authMode === 'login' ? 'Reg√≠strate aqu√≠' : 'Inicia sesi√≥n aqu√≠'}
            </button>
          </p>
        </div>
        <form className="mt-8 space-y-6" onSubmit={(e) => e.preventDefault()}>
          {authMode === 'register' && (
            <div>
              <label htmlFor="name" className="block text-sm font-medium text-gray-700">Nombre completo</label>
              <input
                id="name"
                name="name"
                type="text"
                required
                className="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              />
            </div>
          )}
          <div>
            <label htmlFor="email" className="block text-sm font-medium text-gray-700">Correo electr√≥nico</label>
            <input
              id="email"
              name="email"
              type="email"
              autoComplete="email"
              required
              className="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
            />
          </div>
          <div>
            <label htmlFor="password" className="block text-sm font-medium text-gray-700">Contrase√±a</label>
            <input
              id="password"
              name="password"
              type="password"
              autoComplete="current-password"
              required
              className="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
            />
          </div>
          {authMode === 'register' && (
            <div>
              <label htmlFor="isAdmin" className="block text-sm font-medium text-gray-700">
                ¬øEs administrador? (requiere c√≥digo especial)
              </label>
              <div className="mt-2 flex items-center">
                <input
                  id="isAdmin"
                  name="isAdmin"
                  type="checkbox"
                  className="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                />
                <label htmlFor="isAdmin" className="ml-2 block text-sm text-gray-700">
                  Marcar si es administrador
                </label>
              </div>
              <div className="mt-2">
                <input
                  type="text"
                  placeholder="C√≥digo de administrador (0824)"
                  value={adminCode}
                  onChange={(e) => setAdminCode(e.target.value)}
                  className="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                />
              </div>
            </div>
          )}
          <div>
            <button
              type="submit"
              onClick={(e) => {
                e.preventDefault();
                const email = document.querySelector('[name="email"]').value;
                const password = document.querySelector('[name="password"]').value;
                
                if (authMode === 'login') {
                  handleLogin(email, password);
                } else {
                  const name = document.querySelector('[name="name"]').value;
                  const isAdmin = document.querySelector('[name="isAdmin"]')?.checked || false;
                  handleRegister(name, email, password, isAdmin, adminCode);
                }
              }}
              className="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              {authMode === 'login' ? 'Iniciar Sesi√≥n' : 'Registrarse'}
            </button>
          </div>
        </form>
      </div>
    </div>
  );

  const Navbar = () => (
    <nav className="bg-blue-800 text-white shadow-lg">
      <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div className="flex justify-between h-16">
          <div className="flex items-center">
            <h1 className="text-xl font-bold">SIU Guaran√≠ - Capacitaci√≥n Docentes</h1>
          </div>
          <div className="flex items-center space-x-4">
            <button 
              onClick={() => setCurrentPage('home')} 
              className={`px-3 py-2 rounded-md text-sm font-medium ${currentPage === 'home' ? 'bg-blue-700' : 'hover:bg-blue-700'}`}
            >
              Inicio
            </button>
            {currentUser && (
              <>
                <button 
                  onClick={() => setCurrentPage('virtualClassroom')} 
                  className={`px-3 py-2 rounded-md text-sm font-medium ${currentPage === 'virtualClassroom' ? 'bg-blue-700' : 'hover:bg-blue-700'}`}
                >
                  Aula Virtual
                </button>
                <button 
                  onClick={() => setCurrentPage('materials')} 
                  className={`px-3 py-2 rounded-md text-sm font-medium ${currentPage === 'materials' ? 'bg-blue-700' : 'hover:bg-blue-700'}`}
                >
                  Materiales
                </button>
                <button 
                  onClick={() => setCurrentPage('forum')} 
                  className={`px-3 py-2 rounded-md text-sm font-medium ${currentPage === 'forum' ? 'bg-blue-700' : 'hover:bg-blue-700'}`}
                >
                  Foro
                </button>
                <button 
                  onClick={() => setCurrentPage('account')} 
                  className={`px-3 py-2 rounded-md text-sm font-medium ${currentPage === 'account' ? 'bg-blue-700' : 'hover:bg-blue-700'}`}
                >
                  Mi Cuenta
                </button>
                {currentUser.role === 'admin' && (
                  <button 
                    onClick={() => setShowAdminPanel(!showAdminPanel)}
                    className="px-3 py-2 rounded-md text-sm font-medium bg-red-600 hover:bg-red-700"
                  >
                    {showAdminPanel ? 'Ocultar Panel Admin' : 'Panel Admin'}
                  </button>
                )}
              </>
            )}
            {currentUser ? (
              <button 
                onClick={handleLogout}
                className="px-3 py-2 rounded-md text-sm font-medium bg-gray-600 hover:bg-gray-700"
              >
                Cerrar Sesi√≥n
              </button>
            ) : (
              <button 
                onClick={() => {
                  setAuthMode('login');
                  setCurrentPage('auth');
                }}
                className="px-3 py-2 rounded-md text-sm font-medium bg-gray-600 hover:bg-gray-700"
              >
                Iniciar Sesi√≥n
              </button>
            )}
          </div>
        </div>
      </div>
    </nav>
  );

  const HomePage = () => (
    <div className="bg-gray-50 min-h-screen">
      <div className="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div className="text-center">
          <h1 className="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
            Capacitaci√≥n en SIU Guaran√≠
          </h1>
          <p className="mt-4 max-w-2xl text-xl text-gray-500 mx-auto">
            Plataforma de formaci√≥n para docentes en el uso del sistema SIU Guaran√≠
          </p>
          {!currentUser && (
            <div className="mt-8">
              <button
                onClick={() => {
                  setAuthMode('register');
                  setCurrentPage('auth');
                }}
                className="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              >
                Crear Cuenta
              </button>
            </div>
          )}
        </div>
        
        <div className="mt-20">
          <div className="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
            <div className="bg-white overflow-hidden shadow rounded-lg">
              <div className="px-4 py-5 sm:p-6">
                <h3 className="text-lg font-medium text-gray-900">Aula Virtual</h3>
                <p className="mt-2 text-sm text-gray-500">
                  Accede a cursos organizados por m√≥dulos con materiales y actividades interactivas.
                </p>
              </div>
            </div>
            
            <div className="bg-white overflow-hidden shadow rounded-lg">
              <div className="px-4 py-5 sm:p-6">
                <h3 className="text-lg font-medium text-gray-900">Materiales de Estudio</h3>
                <p className="mt-2 text-sm text-gray-500">
                  Descarga documentos, presentaciones, gu√≠as y otros recursos para tu capacitaci√≥n.
                </p>
              </div>
            </div>
            
            <div className="bg-white overflow-hidden shadow rounded-lg">
              <div className="px-4 py-5 sm:p-6">
                <h3 className="text-lg font-medium text-gray-900">Soporte y Comunidad</h3>
                <p className="mt-2 text-sm text-gray-500">
                  Participa en el foro, haz preguntas y comparte experiencias con otros docentes.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  );

  const Dashboard = () => (
    <div className="bg-gray-50 min-h-screen">
      <div className="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <div className="px-4 py-6 sm:px-0">
          <h1 className="text-3xl font-bold text-gray-900 mb-6">Panel de Control - {currentUser.name}</h1>
          
          <div className="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
            {/* Progress Card */}
            <div className="bg-white overflow-hidden shadow rounded-lg">
              <div className="px-4 py-5 sm:p-6">
                <h3 className="text-lg font-medium text-gray-900">Progreso General</h3>
                <div className="mt-2">
                  {courses.map(course => (
                    <div key={course.id} className="mt-4">
                      <div className="flex justify-between text-sm font-medium text-gray-700">
                        <span>{course.title}</span>
                        <span>{course.progress}%</span>
                      </div>
                      <div className="mt-1 bg-gray-200 rounded-full h-2.5">
                        <div 
                          className="bg-blue-600 h-2.5 rounded-full" 
                          style={{ width: `${course.progress}%` }}
                        ></div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
            
            {/* Notifications Card */}
            <div className="bg-white overflow-hidden shadow rounded-lg">
              <div className="px-4 py-5 sm:p-6">
                <h3 className="text-lg font-medium text-gray-900">Notificaciones</h3>
                <div className="mt-4 space-y-4">
                  {notifications.slice(0, 3).map(notification => (
                    <div 
                      key={notification.id} 
                      className={`p-3 rounded-md cursor-pointer ${notification.read ? 'bg-gray-50' : 'bg-blue-50'}`}
                      onClick={() => markNotificationAsRead(notification.id)}
                    >
                      <p className="text-sm text-gray-800">{notification.message}</p>
                      <p className="text-xs text-gray-500 mt-1">{notification.date}</p>
                    </div>
                  ))}
                </div>
                <div className="mt-4">
                  <button 
                    onClick={() => setCurrentPage('materials')}
                    className="text-sm text-blue-600 hover:text-blue-800"
                  >
                    Ver todos los materiales
                  </button>
                </div>
              </div>
            </div>
            
            {/* Quick Actions Card */}
            <div className="bg-white overflow-hidden shadow rounded-lg">
              <div className="px-4 py-5 sm:p-6">
                <h3 className="text-lg font-medium text-gray-900">Acciones R√°pidas</h3>
                <div className="mt-4 space-y-3">
                  <button
                    onClick={() => setCurrentPage('virtualClassroom')}
                    className="w-full flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
                  >
                    Ir al Aula Virtual
                  </button>
                  <button
                    onClick={() => setCurrentPage('materials')}
                    className="w-full flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700"
                  >
                    Ver Materiales
                  </button>
                  <button
                    onClick={() => setCurrentPage('forum')}
                    className="w-full flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-purple-600 hover:bg-purple-700"
                  >
                    Visitar Foro
                  </button>
                </div>
              </div>
            </div>
